<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f9f4f4">

        <TextView
            android:id="@+id/text_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品详情页"
            android:textColor="#000"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/back_icons"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/back" />
    </RelativeLayout>

    <TextView
        android:id="@+id/zt"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/header"
        android:background="#979696" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button"
        android:layout_below="@+id/zt"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/scorrll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/goods_photo"
                android:layout_width="match_parent"
                android:layout_height="300dp" />

            <TextView
                android:id="@+id/zt2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#979696" />


            <TextView
                android:id="@+id/text_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:text="￥9999.00"
                android:textColor="#DF550B"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/text_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="0dp"
                android:layout_toRightOf="@+id/text_goods_price"
                android:text="商品名"
                android:textColor="#FF000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/zt3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/text_goods_name"
                android:background="#979696" />

            <TextView
                android:id="@+id/text_goods_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_goods_name"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="0dp"
                android:text="商品描述"
                android:textColor="#FF000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/zt4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/text_goods_description"
                android:background="#979696" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/zt4">

                <TextView
                    android:id="@+id/bai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="白条" />

                <TextView
                    android:id="@+id/bai_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/bai"
                    android:layout_alignBottom="@+id/bai"
                    android:layout_marginStart="18dp"
                    android:layout_marginLeft="18dp"
                    android:layout_toEndOf="@+id/bai"
                    android:layout_toRightOf="@+id/bai"
                    android:text="【白条支付】首单立减5元(优惠以登录后为准)"
                    android:textColor="#000" />
            </RelativeLayout>

            <TextView
                android:id="@+id/zt5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/bai"
                android:background="#979696" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/zt5">

                <TextView
                    android:id="@+id/ling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="15dp"
                    android:text="领卷" />

                <TextView
                    android:id="@+id/ling_icons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/ling"
                    android:layout_toRightOf="@id/ling"
                    android:background="#f93510"
                    android:gravity="center"
                    android:text="满3000减300"
                    android:textColor="#FFFFFFFF" />
            </RelativeLayout>


            <TextView
                android:id="@+id/zt6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/ling"
                android:background="#979696" />

            <RelativeLayout
                android:id="@+id/cuxiao"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_above="@+id/kong_xiangqing"
                android:layout_below="@id/zt6">

                <TextView
                    android:id="@+id/cuxiao_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="12dp"
                    android:text="促销" />



                <TextView
                    android:id="@+id/zt7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#979696" />


                <LinearLayout
                    android:id="@+id/to_store"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#402e4c"
                    android:orientation="vertical"
                    android:layout_below="@+id/zt7">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/tv_store_photo"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"/>

                        <TextView
                            android:id="@+id/tv_store_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:text="Apple京东官方自营旗舰店"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_goods"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/iv_store"
                        android:padding="12dp"
                        android:background="@color/white"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/to_store">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="20dp"
                        android:text="为你推荐"/>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="#fff">

        <ImageView
            android:id="@+id/button_store"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/store" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_store"
            android:layout_marginLeft="10dp"
            android:text="店铺" />

        <ImageView
            android:id="@+id/button_collection"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/button_store"
            android:background="@drawable/nocollection" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_collection"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/button_store"
            android:text="收藏" />

        <ImageView
            android:id="@+id/button_cart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/text_cart"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/button_collection"
            android:background="@drawable/nocart" />

        <TextView
            android:id="@+id/text_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_collection"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/button_collection"
            android:text="购物车" />

        <TextView
            android:id="@+id/button_add_cart"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/button_buy"
            android:background="@drawable/bg_button_yellow"
            android:gravity="center"
            android:text="加入购物车"
            android:textColor="#fff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/button_buy"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_button_red"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="#fff"
            android:textSize="16sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/kong_xiangqing"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_above="@id/button"
        android:background="#b9b8b8" />


</RelativeLayout>