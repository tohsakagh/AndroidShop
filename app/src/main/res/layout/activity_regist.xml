<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegistActivity"
    android:background="@drawable/person_backgrouind">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎注册"
        android:textSize="35sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp" />

    <EditText
        android:id="@+id/regist_username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/rounded_edittext"
        android:gravity="center"
        android:hint="请输入用户名（2-20个字符)"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/regist_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/regist_username_input"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/rounded_edittext"
        android:gravity="center"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/error_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/red"
        android:gravity="center_vertical"
        android:layout_below="@+id/regist_password_input"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_regist"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/error_tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#334cff"
        android:text="注册"
        android:textSize="20sp" />

    <Button
        android:id="@+id/toLogin_id"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_regist"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="已有账号，去登陆"
        android:background="#334cff"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/regist_go_home"
        android:src="@drawable/icon_home_selector"
        android:layout_width="24dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toLogin_id"
        android:layout_height="24dp"
        android:layout_marginTop="60dp"/>

    <TextView
        android:id="@+id/tv_first_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regist_go_home"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="首页"
        android:textColor="#FF0000" />

</RelativeLayout>